---
import Social from "./Social.astro";
// import { Image } from "astro:assets";
// import mainImg from "../assets/profile_pic.jpg";
---

<section id="home" class="hero">
  <div class="container">
    <div class="hero-content">
      <h1>Hi, I'm <span class="highlight">Vipul Waghmare</span></h1>
      <h2>Full Stack Developer</h2>
      <p>
        Building robust web applications with MongoDB, Express, React, and
        Node.js for over 4.5 years.
      </p>
      <div class="cta-buttons">
        <a href="#projects" class="btn primary-btn">View My Work</a>
        <a href="#contact" class="btn secondary-btn">Contact Me</a>
      </div>
      <div class="social-icons">
        <Social />
      </div>
    </div>
    <div class="hero-image">
      <div class="image-container">
        <img
          src="/assets/profile_pic.jpg"
          height="400"
          width="400"
          alt="Vipul Waghmare"
        />
      </div>
    </div>
  </div>
</section>
