---
title: Blog
layout: 'base.njk'
---
      
<div class="tag-filters">
  <button class="tag-filter active" data-tag="all">All</button>
  {%- for tag in ["Javascript", "Basic", "Advanced", "React", "Node.js"] -%}
    <button class="tag-filter" data-tag="{{ tag }}">{{ tag }}</button>
  {%- endfor -%}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tagFilters = document.querySelectorAll('.tag-filter');
    const articles = document.querySelectorAll('.articles__list li');

    tagFilters.forEach(filter => {
      filter.addEventListener('click', function() {
        // Remove active class from all filters
        tagFilters.forEach(f => f.classList.remove('active'));
        // Add active class to clicked filter
        this.classList.add('active');

        const selectedTag = this.getAttribute('data-tag');

        articles.forEach(article => {
          if (selectedTag === 'all') {
            article.style.display = 'block';
          } else {
            const articleTags = article.getAttribute('data-tags')?.split(',') || [];
            article.style.display = articleTags.includes(selectedTag) ? 'block' : 'none';
          }
        });
      });
    });
  });
</script>

<div class="section container">
  <ul role="list" class="articles__list flow">
    {%- set postsPerPage = 6 -%}
    {%- set currentPage = page.url | replace("/", "") | default("1") | int -%}
    {%- set startIndex = (currentPage - 1) * postsPerPage -%}
    {%- set endIndex = startIndex + postsPerPage -%}
    {%- set totalPosts = collections.Post | length -%}
    {%- set totalPages = (totalPosts / postsPerPage) | round(0, 'ceil') -%}

    {%- for post in collections.Post | reverse | slice(startIndex, endIndex) -%}
      {% include 'article-snippet.njk' %}
    {%- endfor %}

    {% if totalPages > 1 %}
    <div class="pagination">
      {% if currentPage > 1 %}2
        <a href="?page={{ currentPage - 1 }}" class="pagination__prev">Previous</a>
      {% endif %}
      
      {% for page in range(1, totalPages + 1) %}
        <a href="?page={{ page }}" class="pagination__number {% if page == currentPage %}active{% endif %}">{{ page }}</a>
      {% endfor %}

      {% if currentPage < totalPages %}
        <a href="?page={{ currentPage + 1 }}" class="pagination__next">Next</a>
      {% endif %}
    </div>
    {% endif %}
  </ul>
</div>